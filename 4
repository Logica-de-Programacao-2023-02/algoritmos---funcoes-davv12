package main

import (
	"errors"
	"fmt"
	"sort"
)

func segundoMaiorValor(slice []int) (int, error) {
	if len(slice) < 2 {
		return 0, errors.New("O slice precisa ter pelo menos dois elementos para encontrar o segundo maior valor.")
	}

	copiaSlice := make([]int, len(slice))
	copy(copiaSlice, slice)

	sort.Sort(sort.Reverse(sort.IntSlice(copiaSlice)))

	segundoMaior := copiaSlice[1]
	return segundoMaior, nil
}

func main() {
	valores := []int{10, 5, 8, 15, 3}
	resultado, err := segundoMaiorValor(valores)

	if err != nil {
		fmt.Println("Erro:", err)
	} else {
		fmt.Printf("O segundo maior valor no slice Ã©: %d\n", resultado)
	}
}
