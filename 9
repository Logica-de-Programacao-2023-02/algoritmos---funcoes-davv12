package main

import (
	"errors"
	"fmt"
	"strings"
)

func extrairPalavras(s string) ([]string, error) {
	if s == "" {
		return nil, errors.New("A string está vazia. Não há palavras para extrair.")
	}

	palavras := strings.Fields(s)
	return palavras, nil
}

func main() {
	frase := "Esta é uma frase de exemplo"

	resultado, err := extrairPalavras(frase)

	if err != nil {
		fmt.Println("Erro:", err)
	} else {
		fmt.Println("Palavras na frase:", resultado)
	}
}
