package main

import (
	"errors"
	"fmt"
)

func divisao(a, b int) (float64, error) {
	if b == 0 {
		return 0, errors.New("Não é possível dividir por zero.")
	}

	resultado := float64(a) / float64(b)
	return resultado, nil
}

func main() {
	numero1, numero2 := 10, 2
	resultado, err := divisao(numero1, numero2)

	if err != nil {
		fmt.Println("Erro:", err)
	} else {
		fmt.Printf("%d dividido por %d é igual a %.2f\n", numero1, numero2, resultado)
	}
}
