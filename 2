package main

import "fmt"

func contarVogais(s string) int {
	s = strings.ToLower(s)

	contagem := 0

	// Iterar sobre cada caractere da string
	for _, char := range s {
		// Verificar se o caractere é uma vogal
		switch char {
		case 'a', 'e', 'i', 'o', 'u':
			contagem++
		}
	}

	return contagem
}

func main() {
	frase := "Esta é uma frase de exemplo"
	qtdVogais := contarVogais(frase)
	fmt.Printf("A quantidade de vogais na frase é: %d\n", qtdVogais)
}
