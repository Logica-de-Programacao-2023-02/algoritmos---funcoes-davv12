package main

import (
	"errors"
	"fmt"
	"strings"
)

func concatenarComVirgulas(slice []string) (string, error) {
	if len(slice) == 0 {
		return "", errors.New("O slice está vazio. Não é possível concatenar strings.")
	}

	resultado := strings.Join(slice, ", ")
	return resultado, nil
}

func main() {
	textos := []string{"Olá", "como", "vai", "você?"}
	resultadoConcatenado, err := concatenarComVirgulas(textos)

	if err != nil {
		fmt.Println("Erro:", err)
	} else {
		fmt.Println("Resultado da concatenação:", resultadoConcatenado)
	}
}
